# Compiler
CXX = g++
 
# Compiler flags
CXXFLAGS = -Wall -std=c++17 -Iinclude -IC:/curtis/Define/include # Add the include directory

# Executable name
TARGET = a

# Source files
SRC = main.cpp

# Object files
OBJ = $(SRC:.cpp=.o)

# Default target: compile the program
$(TARGET): $(OBJ)
	$(CXX) $(CXXFLAGS) -o $(TARGET) $(OBJ)

# Compile source files into object files
%.o: %.cpp
	$(CXX) $(CXXFLAGS) -c $< -o $@

# Clean generated files
clean:
	rm -f $(OBJ) $(TARGET)